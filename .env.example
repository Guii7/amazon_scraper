# Amazon Affiliate Scraper
# Variáveis de ambiente - NÃO COMMITAR O ARQUIVO .env!

# ============================================
# CREDENCIAIS AMAZON
# ============================================
AMAZON_EMAIL=seu_email@example.com
AMAZON_PASSWORD=sua_senha_segura

# Amazon Associate Tag (seu ID de afiliado)
# Exemplo: seublog-20
AMAZON_ASSOCIATE_TAG=seu_tag-20

# ============================================
# POSTGRESQL (Docker n8n)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=n8n
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=sua_senha_postgres

# ============================================
# CONFIGURAÇÕES DE SCRAPING
# ============================================
# Modo headless (True = navegador invisível, False = mostra navegador)
HEADLESS=False

# Diretório para salvar sessão do Puppeteer (use caminho relativo ou absoluto)
SESSION_DIR=./puppeteer_session

# Delay entre requests (em segundos) para evitar bloqueio
REQUEST_DELAY=2

# Timeout para carregamento de página (em milissegundos)
PAGE_TIMEOUT=30000

# ============================================
# LOGGING
# ============================================
# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
